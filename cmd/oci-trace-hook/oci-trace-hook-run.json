{
    "version": "1.0.0",
    "hook": {
        "path": "/usr/local/libexec/oci/hooks.d/oci-trace-hook",
        "args": [
            "oci-trace-hook",
            "-s"
        ]
    },
    "when": {
        "annotations": {
            "io.containers.trace-syscall": ".*"
        }
    },
    "stages": [
        "prestart"
    ]
}